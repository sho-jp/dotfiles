"" ColorSchema
set background=light
colorscheme solarized8
" colorscheme github_dark
set termguicolors

"" line in the row
set cursorline

"" Not case sensitive
set ignorecase

"" OS clipboard integration
set clipboard+=unnamedplus

"" SwapFile
set noswapfile

"" Disabled mouse
set mouse=

"" Number
set number

"" Encoding
set encoding=utf-8
set fileencodings=utf-8
set fileformats=unix,dos,mac
